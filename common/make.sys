# fortran compiler, linker, and archiver
#-------------------------------------------------------------------------
F90    = mpif90
LINKER = $(F90)
ARCHIVER = ar -ruv

# fortran preprocessor options, common setting
#-------------------------------------------------------------------------
MPI    = -DMPI
OMP    = #-openmp
API    = #-DAPI -DMPY
FPP    = -fpp
CPP    = $(FPP) $(MPI) $(OMP) $(API)

# machine tuning options, just for my laptop: iris system
#-------------------------------------------------------------------------
GPROF  = #-pg
#CHECK  =  -warn all -check all -traceback -g -nogen-interfaces
#CDUMP  =  -vec-report2 -openmp-report2 -nogen-interfaces
LEVEL  = -O3 -march=core-avx2 -unroll-aggressive  -align all # -I${MKLROOT}/include
MARCH  = # -march=corei7-avx # core2 corei7 corei7-avx core-avx-i core-avx2
#MKL    =  -mkl=sequential
#MKL =  -mkl=parallel

# flags for compiler and linker
#-------------------------------------------------------------------------
FFLAGS = -c $(CPP) $(CHECK) $(CDUMP) $(LEVEL) $(MARCH) $(GPROF) $(MKL)
LFLAGS = -static -Wl,-no_pie $(OMP) $(GPROF) $(MKL)

